{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "make debug",
            "options": {
                "cwd": "./chat-server"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build the project with debug flags"
        },
        {
            "label": "Run Debug",
            "type": "shell",
            "command": "./bin/chat-server",
            "options": {
                "cwd": "${workspaceFolder}/chat-server"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "Build Debug",
            "problemMatcher": []
        }
    ]
}